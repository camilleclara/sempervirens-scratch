<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}SemperVirens - Welcome!
			{% endblock %}
		</title>
		<link rel="stylesheet" href="https://bootswatch.com/4/sketchy/bootstrap.min.css"> {% block stylesheets %}{% endblock %}
		</head>
		<body>
			{% if app.user %}
				<!--navbar-->
				<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
					<a class="navbar-brand" href="/">SemperVirens</a>
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>

					<div class="collapse navbar-collapse" id="navbarColor01">
						<ul class="navbar-nav mr-auto">

							<li class="nav-item">
								<a class="nav-link" href="{{path('app_logout')}}">Logout
									<span class="sr-only"></span>
								</a>
							</li>


							<li class="nav-item">
								<a class="nav-link" href="{{path('profile')}}">{{app.user.pseudo|capitalize}}</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{path('challenges')}}">Challenges</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{path('ecoboutique')}}">EcoBoutique</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{path('trajets')}}">Maps</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{path('messages')}}">Messages{{ render(controller(
            'App\\Controller\\MessageController::notifications')) }}</a>
							</li>

						</ul>
						<form class="form-inline my-2 my-lg-0">
							<input class="form-control mr-sm-2" type="text" placeholder="Search">
							<button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
						</form>

					</div>
				</nav>
				<!--end of navbar-->
			{% else %}
				<!--navbar-->
				<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
					<a class="navbar-brand" href="/">SemperVirens</a>
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>

					<div class="collapse navbar-collapse" id="navbarColor01">
						<ul class="navbar-nav mr-auto">
							<li class="nav-item">
								<a class="nav-link" href="{{path('app_login')}}">Login
									<span class="sr-only"></span>
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{path('app_register')}}">Register
									<span class="sr-only"></span>
								</a>
							</li>
						</ul>
						<form class="form-inline my-2 my-lg-0">
							<input class="form-control mr-sm-2" type="text" placeholder="Search">
							<button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
						</form>

					</div>
				</nav>
				<!--end of navbar-->
			{% endif %}
			<div
				class="container">
				<!--scroll of truth-->
				<div class="alert alert-dismissible alert-success text-center m-2">
					<strong>
						{% if not app.user %}
							Let's make this journey together !
						{% else %}
							{{ render(controller(
            'App\\Controller\\HomeController::truthScroll')) }}
						{% endif %}
					</strong>
				</div>
				<!--end of scroll-->
				{% block body %}{% endblock %}
			</div>
			{% block javascripts %}

			{% endblock %}
			<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
			<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
		</body>
	</html>
