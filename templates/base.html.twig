<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/sketchy/bootstrap.min.css">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
      {% if app.user %}
        <!--navbar-->
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
          <a class="navbar-brand" href="/">SemperVirens</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        
          <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">

              <li class="nav-item">
                <a class="nav-link" href="{{path('app_logout')}}">Logout <span class="sr-only"></span></a>
              </li>

          
              <li class="nav-item">
                <a class="nav-link" href="{{path('profile')}}">Profil</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="{{path('challenges')}}">Challenges</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{path('ecoboutique')}}">EcoBoutique</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{path('trajets')}}">Trajets</a>
              </li>
  
            </ul>
            <form class="form-inline my-2 my-lg-0">
              <input class="form-control mr-sm-2" type="text" placeholder="Search">
              <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>
            
          </div>
        </nav>
        <!--end of navbar-->
        {% else %}
                <!--navbar-->
                <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                  <a class="navbar-brand" href="/">SemperVirens</a>
                  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                  </button>
                
                  <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav mr-auto">
                      <li class="nav-item">
                        <a class="nav-link" href="{{path('app_login')}}">Login <span class="sr-only"></span></a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="{{path('app_register')}}">Register <span class="sr-only"></span></a>
                      </li>
                    </ul>
                    <form class="form-inline my-2 my-lg-0">
                      <input class="form-control mr-sm-2" type="text" placeholder="Search">
                      <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                    </form>
                    
                  </div>
                </nav>
                <!--end of navbar-->
        {% endif %}
        <div class="container">
          <!--scroll of truth-->
          <div class="alert alert-dismissible alert-success text-center m-2">
            <strong>
              {% if not app.user %}
              Let's make this journey together !
              {% else %}
              {{ render(controller(
            'App\\Controller\\HomeController::truthScroll')) }}
              {% endif %}
            </strong>
          </div>
          <!--end of scroll-->
          {% block body %}{% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
